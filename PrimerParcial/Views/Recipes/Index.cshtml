@model IEnumerable<PrimerParcial.Models.Recipe>
@{
    ViewData["Title"] = "Recetas";
}
<h1>Recetas</h1>

<a asp-action="Create" class="btn btn-primary mb-3">Nueva Receta</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Título</th>
            <th>Categoría</th>
            <th>Tiempo de preparación</th>
            <th>Porciones</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Category?.Name</td>
                <td>@item.PreparationTimeMinutes min</td>
                <td>@item.Servings</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Ver</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>